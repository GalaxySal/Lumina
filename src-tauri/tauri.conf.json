{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lumina",
  "version": "0.3.5",
  "identifier": "com.nazim.lumina-browser",
  "build": {
    "beforeDevCommand": "dotnet watch run --project src/tauri-browser.csproj",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "dotnet publish -c release src/tauri-browser.csproj -o dist",
    "frontendDist": "../dist/wwwroot"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Lumina Browser",
        "width": 800,
        "height": 600,
        "transparent": true,
        "windowEffects": {
          "effects": [
            "mica"
          ],
          "state": "active"
        },
        "additionalBrowserArgs": "--ignore-certificate-errors"
      }
    ],
    "security": {
      "csp": "default-src 'self' lumina: lumina-app:; script-src 'self' 'wasm-unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: lumina: lumina-app:; connect-src 'self' https: tauri: lumina: lumina-app:; frame-src https: lumina: lumina-app:;"
    }
  },
  "bundle": {
    "active": true,
    "externalBin": [
      "binaries/kip-lang",
      "binaries/lumina-net",
      "binaries/lumina-sidekick"
    ],
    "targets": [
      "nsis",
      "msi",
      "app",
      "deb",
      "rpm",
      "appimage",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": []
      }
    }
  }
}

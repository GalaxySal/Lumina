{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lumina",
  "version": "0.3.5",
  "identifier": "com.nazim.lumina-browser",
  "build": {
    "beforeDevCommand": "dotnet watch run --project src/tauri-browser.csproj",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "dotnet publish -c release src/tauri-browser.csproj -o dist",
    "frontendDist": "../dist/wwwroot"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Lumina Browser",
        "width": 800,
        "height": 600,
        "transparent": false,
        "additionalBrowserArgs": "--ignore-certificate-errors --disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --disable-speech-api --disable-background-networking --disable-background-timer-throttling --disable-backgrounding-occluded-windows --disable-breakpad --disable-client-side-phishing-detection --disable-component-update --disable-default-apps --disable-dev-shm-usage --disable-domain-reliability --disable-extensions --disable-features=AudioServiceOutOfProcess --disable-hang-monitor --disable-ipc-flooding-protection --disable-popup-blocking --disable-print-preview --disable-prompt-on-repost --disable-renderer-backgrounding --disable-sync --disable-translate --metrics-recording-only --no-first-run --safebrowsing-disable-auto-update --enable-automation --password-store=basic --use-mock-keychain"
      }
    ],
    "security": {
      "csp": "default-src 'self' lumina: lumina-app:; script-src 'self' 'wasm-unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: lumina: lumina-app:; connect-src 'self' https: tauri: lumina: lumina-app:; frame-src https: lumina: lumina-app:;"
    }
  },
  "bundle": {
    "active": true,
    "externalBin": [
      "binaries/kip-lang",
      "binaries/lumina-net",
      "binaries/lumina-sidekick"
    ],
    "targets": [
      "nsis",
      "msi",
      "app",
      "deb",
      "rpm",
      "appimage",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": []
      }
    }
  }
}

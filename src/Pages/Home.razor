    private async Task CloseTab(string tabId)
    {
        var tab = Tabs.FirstOrDefault(t => t.Id == tabId);
        if (tab == null) return;
        
        // Save to Closed Tabs
        ClosedTabs.Push(tab);

        string? nextTabId = null;
        if (ActiveTabId == tabId)
        {
            var index = Tabs.IndexOf(tab);
            if (index > 0) nextTabId = Tabs[index - 1].Id;
            else if (index < Tabs.Count - 1) nextTabId = Tabs[index + 1].Id;
            else nextTabId = null;
        }

        Tabs.Remove(tab);
        
        if (nextTabId != null && ActiveTabId == tabId)
        {
            await SwitchTab(nextTabId);
        }
        else if (Tabs.Count == 0)
        {
            // Close window or create new tab? 
            // Create new tab for now
            await CreateNewTab();
        }
        
        try 
        {
            await Tauri.InvokeVoidAsync("close_tab", new { label = tabId });
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error closing tab: {ex.Message}");
        }
        StateHasChanged();
    }

